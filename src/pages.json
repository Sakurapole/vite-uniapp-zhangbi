{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^wd-(.*)": "wot-design-uni/components/wd-$1/wd-$1.vue",
      "^(?!z-paging-refresh|z-paging-load-more)z-paging(.*)": "z-paging/components/z-paging$1/z-paging$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/index/index",
      "aliasPath": "/index",
      "name": "index",
      "style": {
        "navigationStyle": "custom",
        "navigationBarTitleText": "主页面",
        "navigationBarBackgroundColor": "#FFFFFF",
        "navigationBarTextStyle": "#3b82f6"
      },
      "type": "home"
    },
    {
      "path": "pages/goods/index",
      "aliasPath": "/goods",
      "name": "goodsIndex",
      "style": {
        "navigationStyle": "custom",
        "navigationBarTitleText": "剧本管理",
        "navigationBarBackgroundColor": "#FFFFFF",
        "navigationBarTextStyle": "#3b82f6"
      }
    },
    {
      "path": "pages/index/user/index",
      "aliasPath": "/user",
      "name": "user",
      "style": {
        "navigationStyle": "custom",
        "navigationBarTitleText": "我的",
        "navigationBarBackgroundColor": "#FFFFFF",
        "navigationBarTextStyle": "#3b82f6"
      }
    },
    {
      "path": "pages/login/index",
      "aliasPath": "/login",
      "name": "login",
      "style": {
        "navigationStyle": "custom",
        "navigationBarTitleText": "登录",
        "navigationBarBackgroundColor": "#FFFFFF",
        "navigationBarTextStyle": "#3b82f6"
      }
    }
  ],
  "subPackages": [
    {
      "root": "pages/common",
      "pages": [
        {
          "path": "web-view/index",
          "aliasPath": "/web-view",
          "name": "web-view",
          "style": {
            "navigationBarTitleText": "web-view",
            "transparentTitle": "auto",
            "navigationBarBackgroundColor": "#FFFFFF",
            "navigationBarTextStyle": "#3b82f6"
          }
        },
        {
          "path": "rich-view/index",
          "aliasPath": "/rich-view",
          "name": "rich-view",
          "style": {
            "navigationBarTitleText": "rich-view",
            "navigationBarBackgroundColor": "#FFFFFF",
            "navigationBarTextStyle": "#3b82f6"
          }
        }
      ]
    },
    {
      "root": "pages/goods",
      "pages": [
        {
          "path": "stock/index",
          "aliasPath": "/goods/stock",
          "name": "goodsStock",
          "style": {
            "navigationBarTitleText": "货品库存",
            "navigationBarBackgroundColor": "#FFFFFF",
            "navigationBarTextStyle": "#3b82f6"
          }
        },
        {
          "path": "story/index",
          "aliasPath": "/goods/story",
          "name": "goodsStory",
          "style": {
            "navigationBarTitleText": "货品故事",
            "navigationBarBackgroundColor": "#FFFFFF",
            "navigationBarTextStyle": "#3b82f6"
          }
        },
        {
          "path": "task/index",
          "aliasPath": "/goods/task",
          "name": "goodsTask",
          "style": {
            "navigationBarTitleText": "任务配置",
            "navigationBarBackgroundColor": "#FFFFFF",
            "navigationBarTextStyle": "#3b82f6"
          }
        }
      ]
    },
    {
      "root": "pages/template",
      "pages": [
        {
          "path": "paging/index",
          "aliasPath": "/template-paging",
          "name": "template-paging",
          "style": {
            "navigationBarTitleText": "通用列表",
            "navigationBarBackgroundColor": "#FFFFFF",
            "navigationBarTextStyle": "#3b82f6"
          }
        }
      ]
    },
    {
      "root": "pages/personal",
      "pages": [
        {
          "path": "index",
          "aliasPath": "/personal",
          "name": "personal",
          "style": {
            "navigationBarTitleText": "个人资料",
            "transparentTitle": "auto",
            "navigationBarBackgroundColor": "#FFFFFF",
            "navigationBarTextStyle": "#3b82f6"
          }
        }
      ]
    },
    {
      "root": "pages/preference",
      "pages": [
        {
          "path": "index",
          "aliasPath": "/preference",
          "name": "preference",
          "style": {
            "navigationBarTitleText": "偏好设置",
            "navigationBarBackgroundColor": "#FFFFFF",
            "navigationBarTextStyle": "#3b82f6"
          }
        }
      ]
    }
  ],
  "tabBar": {
    "color": "#9ca3af",
    "selectedColor": "#028d71",
    "backgroundColor": "#FFFFFF",
    "borderStyle": "#f0f2f5",
    "list": [
      {
        "iconPath": "static/images/tabbar/home.png",
        "selectedIconPath": "static/images/tabbar/home-active.png",
        "pagePath": "pages/index/index",
        "text": "主页面"
      },
      {
        "iconPath": "static/images/tabbar/goods.png",
        "selectedIconPath": "static/images/tabbar/goods-active.png",
        "pagePath": "pages/goods/index",
        "text": "剧本管理"
      },
      {
        "iconPath": "static/images/tabbar/user.png",
        "selectedIconPath": "static/images/tabbar/user-active.png",
        "pagePath": "pages/index/user/index",
        "text": "我的"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTitleText": "vite-uniapp-zhangbi",
    "navigationBarBackgroundColor": "#FFFFFF",
    "navigationBarTextStyle": "#3b82f6",
    "backgroundColor": "#f8fafc"
  }
}
